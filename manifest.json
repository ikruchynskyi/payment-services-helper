{
  "manifest_version": 3,
  "name": "Adobe Payment Services Helper",
  "version": "2.0",
  "description": "Detects and prints usefull information into browser console.",
  "permissions": ["activeTab","scripting","tabs","storage","debugger"],
  "action": {
//    "default_icon": {
//      "16": "icons/adobe-16.png"
//    },
    "default_title": "Analyze errors",
    "default_popup": "settings/index.html"
  },
  "background": {
      "service_worker": "serviceWorkers/background.js"
  },
  "content_scripts": [
    {
      "js": ["contentScripts/content.js"],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injectScripts/getCheckoutPayments.js", "injectScripts/isHyva.js", "injectScripts/getMixins.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

